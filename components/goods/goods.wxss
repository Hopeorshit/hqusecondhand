.product {
  display: flex;
  flex-wrap: wrap;
  font-size: 12px;
}

.product-box {
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}

.product-container {
  border: 1rpx solid #f5f6f7;
  background-color: white;
  border-radius: 20rpx;
}

.product-image {
  height: 270rpx;
  overflow: hidden;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-title {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

.product-title text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 14px;
}

.product-title image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.product-bottom-t1 {
  font-size: 24rpx;
  color: #ff6263;
  line-height: 40rpx;
}

.like-v {
  display: flex;
  align-items: center;
}

.like-v image {
  width: 30rpx;
  height: 30rpx;
}

.like-v text {
  color: #a9aaac;
  padding: 0 4rpx;
}
